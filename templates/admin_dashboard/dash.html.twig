{% extends 'base.html.twig' %}

{% block title %}Admin dashboard
{% endblock %}

{% block stylesheets %}
    {{parent()}}

    <link href="{{asset('styles/admin.css')}}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="nav">
        <div class="logo"><img src="{{asset('images/aDash.png')}}" alt="dashLogo" title="Admin dashboard"/></div>
        <div class="userManage">
            <button title="Users">
                <i class="glyphicon glyphicon-user"></i>
            </button>
        </div>
        <div class="postManage">
            <button title="Posts">
                <i class="glyphicon glyphicon-book"></i>
            </button>
        </div>
        <div class="commentManage">
            <button title="Comments">
                <i class="glyphicon glyphicon-comment"></i>
            </button>
        </div>

        <div class="logOut">
            <p>Logged as
                {{user.username}}(<a href="#">Logout</a>)
            </p>
        </div>
    </div>
{% endblock %}

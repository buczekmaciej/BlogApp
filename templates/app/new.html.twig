{% extends "base.html.twig" %}

{% set formater = 'You can check formater cheatsheet after click' %}

{% block title %}Create new post
{% endblock %}

{% block body %}
    <div class="creatorContainer">
        <div class="back">
            <a href="{{path('appHomepage')}}">
                <p>
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    <b>Homepage</b>
                </p>
            </a>
        </div>
        <div class="formContainer">
            {{form_start(form)}}
            {{form_widget(form.Title)}}
            <a href='https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet' target='_blank'>
                <i class="glyphicon glyphicon-question-sign" aria-label="{{formater}}"></i>
            </a>
            {{form_widget(form.Content)}}
            {{form_widget(form.Create)}}
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}

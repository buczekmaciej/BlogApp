{% extends 'base.html.twig' %}

{% block title %}Eat much blog
{% endblock %}

{% block navbar %}
    <div class="navbar">
        <div class="homeLink">
            <a href="{{path('appHomepage')}}">
                <img src="{{asset('images/logo.png')}}" alt="Logo">
            </a>
        </div>
        <div class="separator"></div>
        <div class="rightNav" id="nav">
            <div class="glypNew">
                <a href="{{path('newArticle')}}" title="Create new article">
                    <i class="glyphicon glyphicon-plus"></i>
                </a>
            </div>
            <div class="glypSrch" id="searchContainer">
                <i class="glyphicon glyphicon-search" title="Find post"></i>
            </div>
            <div class="glypUsr">
                <a href="{{path('userProfile', {'user':name})}}">
                    <i class="glyphicon glyphicon-user" title="{{name}}"></i>
                </a>
            </div>
            <a href="{{path('userLogout')}}">
                <button>
                    <i class="glyphicon glyphicon-log-out"></i>
                </button>
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="contentContainer">
        <div class="listPost">
            {% for key,val in posts %}
                <a href="{{path('articleShow', {'slug':val.link})}}">
                    <div class="articleContainer">
                        <div class="articleTitle">
                            <h2>{{val.Title}}</h2>
                        </div>
                        <div class="articleCreated">
                            <b>
                                <i>Created at:
                                    {{val.createdAt|date("Y-m-d")}}</i>
                            </b>
                        </div>
                        <div class="articleAuthor">
                            <b>Created by:
                                {{val.user.Login}}</b>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{asset('js/search.js')}}"></script>
{% endblock %}

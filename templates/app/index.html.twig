{% extends 'base.html.twig' %}

{% block title %}Eat much blog
{% endblock %}

{% block navbar %}
    <div class="navbar">
        <div class="homeLink">
            <a href="{{path('appHomepage')}}">
                <h2>Eat much</h2>
            </a>
        </div>
        <div class="separator"></div>
        <div class="rightNav">
            <div class="glypNew">
                <a href="{{path('newArticle')}}" title="Create new article">
                    <i class="glyphicon glyphicon-plus"></i>
                </a>
            </div>
            <div class="glypSrch">
                <i class="glyphicon glyphicon-search" title="Find post"></i>
            </div>
            <div class="glypUsr">
                <i class="glyphicon glyphicon-user" title="{{name}}"></i>
            </div>
            <a href="{{path('userLogout')}}">
                <button>Logout</button>
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="contentContainer">
        <div class="recentPost"></div>
        <div class="listPost">
            {% for key,val in posts %}
                <a href="{{path('articleShow', {'slug':val.link})}}">
                    <div class="articleContainer">
                        <div class="articleTitle">
                            <h2>{{val.Title}}</h2>
                        </div>
                        <div class="articleCreated">
                            <b>
                                <i>Created at:
                                    {{val.createdAt|date("Y-m-d")}}</i>
                            </b>
                        </div>
                        <div class="articleAuthor">
                            <b>Created by:
                                {{val.user.Login}}
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endblock %}

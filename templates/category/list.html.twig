{% extends "defaults/_nav.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/styles/app/category/list.css">
{% endblock %}

{% block content %}
	<section class="categories-list">
		<svg class='loading-icon' stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd" d="M4.5 3a2.5 2.5 0 015 0v9a1.5 1.5 0 01-3 0V5a.5.5 0 011 0v7a.5.5 0 001 0V3a1.5 1.5 0 10-3 0v9a2.5 2.5 0 005 0V5a.5.5 0 011 0v7a3.5 3.5 0 11-7 0V3z" clip-rule="evenodd"></path>
		</svg>
		<p class="loading-text">Getting data to show</p>
	</section>
{% endblock %}

{% block sideBtn %}
	{% if app.user and "ROLE_ADMIN" in app.user.roles %}
		<a href="{{ path('categoryCreate') }}" class="admin-create-btn">
			<svg class="plus-icon" stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z" clip-rule="evenodd"></path>
				<path fill-rule="evenodd" d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z" clip-rule="evenodd"></path>
			</svg>
			Create new category
		</a>
	{% endif %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="/scripts/category.js"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('styles/user.css')}}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="logContainer">
        <div class="logForm">
            <h2>Login</h2>
            {{form_start(form)}}
            {{form_widget(form.Username)}}
            {{form_widget(form.Password)}}
            {{form_widget(form.Login)}}
            {{form_end(form)}}
            <a href="{{path('userRegister')}}">You have no account yet? Register now!</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block stylesheets %}
	<link href="/styles/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<form action="{{ path('userLogin') }}" method="POST">
		<p class="tag">
			Sign in
		</p>
		<div class="inpBox">
			<input type="text" id="username" name="username" value="{{ username }}" autofocus required/>
			<label for="username">
				Username
			</label>
		</div>
		<div class="inpBox">
			<input type="password" id="password" class="pass" name="password" required/>
			<label for="password">
				Password
			</label>
			<span class="showBtn">
				Show
			</span>
		</div>
		<label>
			<input type="checkbox" name="_remember_me">
			Remember me
		</label>
		<input type="hidden" name="csrf" value="{{ csrf_token('authenticate') }}">
		<button id="submit-login" type="submit" disabled>
			Sign in
		</button>
		<a href="{{path('userRegister')}}">
			Become member now
		</a>
		{% if error %}
			<div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
	</form>
{% endblock %}

{% block javascripts %}
	<script src="/js/forms.js"></script>
{% endblock %}
